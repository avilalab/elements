{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "typeRoots": ["./node_modules/@types", "./src/types.d.ts"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["src", "src/types.d.ts"]
}